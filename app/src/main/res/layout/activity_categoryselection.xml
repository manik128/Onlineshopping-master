<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categoryselection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windows7.onlineshopping.Categoryselection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"


        android:background="#6ac726"

        android:orientation="horizontal"

        android:id="@+id/linearLayout2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sort"
            android:background="#57ac1a"
           android:id="@+id/btnsort"
            android:textColor="#ffffff"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Filter"
            android:id="@+id/btncontinue"
            android:background="#25c438"
            android:textColor="#ffff"
            android:layout_weight="1"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout3"

        android:orientation="horizontal"

        android:id="@+id/linearLayout4">
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example2"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_weight="1"
            android:orientation="vertical"

            android:id="@+id/linearLayoutthree">
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/hometheatrea"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs.3000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
       </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example3"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"

            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_weight="1"
            android:orientation="vertical"

            android:id="@+id/linearLayoutfour">
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:layout_centerVertical="true"
                android:src="@drawable/hometheatrea"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs.3000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout4"

        android:orientation="horizontal"
       >
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example4"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_weight="1"
                android:orientation="vertical"

                android:id="@+id/linearLayoutfive">
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hometheatrea"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.3000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example5"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"

            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_weight="1"
                android:orientation="vertical"

                android:id="@+id/linearLayoutsix">
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"

                    android:layout_centerVertical="true"
                    android:src="@drawable/hometheatrea"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.3000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
   android:layout_marginTop="18dp"

        android:orientation="horizontal"

        android:id="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_weight="1"
        android:orientation="vertical"

        android:id="@+id/linearLayoutone">

        <ImageView

        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
       android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/hometheatrea"
         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item name"
            android:id="@+id/tvitem"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_below="@+id/profile_image"
            android:textStyle="bold"

           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs.3000"
            android:layout_below="@+id/tvitem"
            android:textSize="15dp"
            android:textStyle="bold"
           android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
 <Button
     android:layout_width="75dp"
     android:layout_height="wrap_content"
     android:textSize="8dp"
     android:text="Add to Cart"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:text="Buy Now"
            />
        </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"

            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/android_card_view_example"
        android:layout_weight="1"
        android:orientation="vertical"

        android:id="@+id/linearLayouttwo">

        <ImageView
            android:id="@+id/profile_image1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"

            android:layout_centerVertical="true"
            android:src="@drawable/hometheatrea"

             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs.3000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
</ScrollView>