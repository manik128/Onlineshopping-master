<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>



    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollview"

        android:layout_height="match_parent"
        android:background="#fff"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:id="@+id/rltop"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivlogo"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
       />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="login page"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textColor="#131212"
                    android:gravity="center"
                    android:id="@+id/tit"
                    android:layout_below="@+id/ivlogo"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rltop"

                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:textColorHint="#000"

                    android:textColor="#aca8a8"
                    android:layout_marginTop="25dp"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etemail"
                        android:hint="Email Id or Phone number"
                        android:textColor="#aca8a8"
                        android:backgroundTint="#0000"

                        android:padding="15dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/envelope"
                        android:drawablePadding="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:paddingTop="8dp"

                        android:layout_marginBottom="5dp"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerHorizontal="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rdbtn"
                    android:textColorHint="#000"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etpassword"
                        android:hint="Password"

                        android:textColor="#aca8a8"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:drawablePadding="10dp"
                        android:backgroundTint="#000"
                         android:drawableLeft="@drawable/key"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:paddingTop="8dp"



                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerHorizontal="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fullname"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/input_layout_password"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#000"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/etfullname"
                        android:hint="Full name"
                        android:textColor="#aca8a8"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:backgroundTint="#000"
                        android:drawableLeft="@drawable/avatar"
                        android:drawablePadding="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:paddingTop="8dp"

                        android:layout_marginBottom="5dp"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerHorizontal="true" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/your_strings"
                    android:layout_below="@+id/input_layout_fullname"
                    android:layout_height="wrap_content"
                    android:id="@+id/forpass"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentBottom="true"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:text="I already have an account"
                    android:layout_below="@+id/input_layout_email"
                    android:id="@+id/rdbtn"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/dots_clear"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>
        </RelativeLayout>



    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/la"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:text="Register"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/btnregister"
            android:windowSoftInputMode="stateHidden"
            android:textColor="#ffffff"
            android:background="#539e63"/>
    </LinearLayout>

</RelativeLayout>
